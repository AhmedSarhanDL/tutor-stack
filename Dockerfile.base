FROM python:3.11-slim

# Install git for pip git dependencies
RUN apt-get update && \
    apt-get install -y git && \
    apt-get clean && \
    rm -rf /var/lib/apt/lists/*

# Set working directory
WORKDIR /app

# Copy project files
COPY pyproject.toml .
COPY README.md .

# Install the project and dependencies
RUN pip install --no-cache-dir . 